{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    // "react/react-in-jsx-scope": "off",

    "overrides": [
        {
            "files": ["*.jsx"],
            "extends": ["plugin:react/recommended"],
            "parserOptions": {
                "ecmaFeatures": {
                    "jsx": true
                }
            }
        }
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "indent": ["error", 2],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}
